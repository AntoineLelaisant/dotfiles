#!/usr/bin/sh

pacman -R --noconfirm vim
pacman -S --noconfirm gvim

sh ./vim/install-plugins

mkdir -p /home/antoine/.vim/
mkdir -p /home/antoine/.vim/tmp/

ln -s -f /home/antoine/.dotfiles/vim/vimrc /home/antoine/.vimrc
ln -s -f /home/antoine/.dotfiles/vim/colors /home/antoine/.vim/colors
ln -s -f /home/antoine/.dotfiles/vim/UltiSnips /home/antoine/.vim/UltiSnips

chown -R antoine /home/antoine/.vim/
